<article ng-app="customers" ng-controller="CustomerSearchController">

  <header>
    <h1 class="h1"> Customer Search </h1>
    <div class="glyphicon-log-out text-right navbar-btn">
      <%= link_to 'Log Out', destroy_user_session_path, method: :delete %>
    </div>
  </header>

  <section class="search-form">
    <form>
      <div class="input-group input-group-lg">
        <label for="keywords" , class=sr-only"> Keywords </label>
        <input type="text"
               name="keywords"
               placeholder="First Name, Last Name or Email Address"
               class="form-control input-lg"
               ng-model="keywords">
        <span class="input-group-btn">
          <button class="btn btn-primary btn-lg"
                  ng-click="search(keywords)">
            Find Customers
          </button>
        </span>
      </div>
      <h1 class="searchedFor" ng-if="searchedFor">
        <small>Searched For:</small>
        {{searchedFor}}
      </h1>
    </form>
  </section>

